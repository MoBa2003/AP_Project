                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <RadioButton Margin="20 0" Content="Sending" GroupName="Options"  />
                        <RadioButton Margin="32 0" Content="Delivered" GroupName="Options"  />
                    </StackPanel>

                    <Button Grid.Row="3" Content="Update" RenderTransformOrigin="0.144,-1.452" Margin="10,10,10,0"/>


                </Grid>








                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>

                        <RowDefinition/>
                    </Grid.RowDefinitions>
